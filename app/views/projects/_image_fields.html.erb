
  <div class="control-group">
  <%= f.label :file, :class => 'control-label' %>
    <% unless f.object.new_record? %>
      <%= image_tag f.object.file.url(:thumb) %>
    <% end %>
    <div class="controls">
      <% unless !f.object.new_record? %>
      <%= f.file_field :file %>
      <% end %>
      <%= f.hidden_field :_destroy %>
      <%= link_to "remove", "#", :class => "remove_fields" %>
    </div>
  </div>
