<div class="control-group">
  <% unless f.object.new_record? %>
  <%= f.label :file, :class => 'control-label' %>
    <%= image_tag f.object.file.url %>
    <div class="controls">
      <%= f.file_field :file %>
      <%= f.hidden_field :_destroy %>
      <%= link_to "remove", "#", class: "remove_fields" %>
    </div>
  <% end %>
</div>