<div id="slidescontainer">
        <div id="slideshowindex" class="container">
          <a href="#" id="slideclose" >close</a>
        </div>
      </div>
<header class="main">
      <div class="container">
        <div id="title">
          <h1>Design Portfolio<br /><span>of <strong>Jonathan Hoffman</strong></span></h1>
          <div class="url">www.j-hoff.com</div>
        </div>
        <nav>
          <ul>
            <li><a id="homeLink" href="#home">Home</a></li>
            <li><a id="portfolioLink" href="#portfolio">Portfolio</a></li>
            <li><a href="mailto:jonathan@hofnar.net">Contact</a></li>
            <li><a href="/resume.pdf" target="_blank">Resume</a></li>
          </ul>
        </nav>
      </div>
    </header>
    <section id="taglines">
      <div class="container">
        <h2><span><strong>HI!</strong></span></h2>
        <h2><span>I'm a <strong>web/interactive designer.</strong></span></h2>
        <h2><span>I live in <strong>Brooklyn,</strong> and work at <strong>grey NY.</strong></span></h2>
      </div>
    </section>
    <section id="portfolio">
      <div class="container">
        <header>
          <nav>
            <ul id="categories">
              <li><a href="#" data-cat-id="all">All</a></li>
              <% @categories.each do |cat| %>
                <li><a href="#" data-cat-id="<%= cat.id %>"><%= cat.name %></a></li>
              <% end %>
            </ul>
          </nav>
        </header>
        <ul id="projects">
          <% @projects.each_with_index do |project, index| %>
          <li id="projectid<%= project.id %>" data-cat-id="<%= project.category_id %>" <% if (index+1)%3 == 0 %> class="right"<% end %>>
            <a href="#" class="project-thumb" data-project-id="<%= project.id %>">
              <div class="image">
                <%= image_tag project.thumb.url(:square) %>
              </div>
              <div class="description">
                <div class="descriptioncontent">
                  <div class="titles">
                    <h3><%= project.title %></h3>
                    <h4><%= project.kind %></h4>
                  </div>
                  <p><%= project.description %></p>
                </div>
              </div>
            </a>
          </li>
          <% end %>
        </ul>
      </div>
    </section>
